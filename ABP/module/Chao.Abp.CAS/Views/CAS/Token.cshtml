@{
    Layout = null;
}
<script type="text/javascript">
    localStorage.setItem('access_token_stored_at', new Date((new Date()).getTime() + @ViewData["expires_in"] * 1000).getTime());
    localStorage.setItem('access_token', '@ViewData["access_token"]');
    localStorage.setItem('expires_at', new Date((new Date()).getTime() + @ViewData["expires_in"] * 1000).getTime());
    localStorage.setItem('refresh_token', '@ViewData["refresh_token"]');
    location.href = '@ViewData["LandingUri"]';
</script>